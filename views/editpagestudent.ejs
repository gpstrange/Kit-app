                <li><a href="#">Exam Schedule</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>

            <center>
                <div class="container" style="width:50%;margin-top:20px">
                    <h1>Edit Profile</h1>
                    <hr>
                    <form class="ui form" action="/editstudent" method="post">
                    <div class="row">
                      <div class="col-md-3">
                        <div class="text-center" id="div">
                          <img src="uploads/<%= item.pic %>" width="200" height="200" class="avatar img-circle img-responsive" alt="avatar">
                          <h6><%=item.pic%></h6>
                          <input type="button" class="btn btn-danger" id="uploadPic" value="Upload photo">
<script>
$("#uploadPic").click(() => {
   console.log("Clicked");
   $('.ui.modal')
  .modal('show');
});
$("#formSubmit").click(()=>{
  $('.ui.basic.modal').modal('show');
  var URL='http://localhost:8000/editstudent';
  setTimeout(function(){ window.location = URL; }, 1000 );
});
</script>
                        </div>
                      </div>

                      <div class="col-md-9 personal-info">
                        <% var error; if(error){ %>
                        <div class="alert alert-info alert-dismissable">
                          <a class="panel-close close" data-dismiss="alert">Ã—</a>
                          <i class="fa fa-coffee"></i>
                          <strong><%= error %></strong>.
                        </div>
                        <% } %>
                        <h3 style="color:#800e10;">Personal info</h3>

                        <form class="form-horizontal" role="form">
                            <div class="field">
                              <label style="color:#800e10;">Full Name</label>
                                <div class="field">
                                  <input type="text" name="name" value="<%= item.name %>" >
                                </div>
                            </div>
                            <div class="disabled field">
                             <label style="color:#800e10;">Aadhar.No </label>
                             <input type="number" name="aadharNumber" value="<%= item.aadharNumber %>" >
                            </div>
                            <div class="field">
                              <label style="color:#800e10;">Date of birth</label>
                                <div class="field">
                                  <input type="date" name="dob" value="<%=  item.dob.toISOString().slice(0, 10);%>" required>
                                </div>
                            </div>
                            <div class="field">
                             <label style="color:#800e10;">Mobile</label>
                             <input type="number" name="phone" value="<%= item.phone %>" required>
                            </div>
                            <div class="field">
                              <label style="color:#800e10;">Blood Group</label>
                                <div class="field">
                                  <input type="text" name="bloodGroup" value="<%= item.bloodGroup %>" required>
                                </div>
                            </div>
                            <div class="field">
                             <label style="color:#800e10;">Community</label>
                              <select class="ui search dropdown" name="community">
                                <option value="<%= item.community %>"><%= item.community %></option>
                                <option value="BC">BC</option>
                                <option value="MBC">MBC</option>
                                <option value="BCM">BCM</option>
                                <option value="SC">SC</option>
                                <option value="ST">ST</option>
                                <option value="OC">OC</option>
                                </select>
                             </div>
                            <div class="disabled field">
                              <label style="color:#800e10;">Department</label>
                              <select class="ui search dropdown" name="dept" >
                                <option value="<%= item.dept %>"><%= item.dept %></option>
                                <option value="ECE">ECE</option>
                                <option value="EEE">EEE</option>
                                <option value="MECH">MECH</option>
                                <option value="CSE">CSE</option>
                                <option value="AERO">AERO</option>
                                <option value="AGRI">Agricultural Engg.</option>
                                <option value="Bio Med">Bio Medical Engg.</option>
                                <option value="Bio Tech">Bio-Tech</option>
                                <option value="MBA">MBA</option>
                                <option value="MCA">MCA</option>
                                <option value="S&H">S & H</option>
                                <option value="M.e">M.E</option>
                                <option value="M.E">M.E</option>
                              </select>
                            </div>
                            <div class="field">
                              <label style="color:#800e10;">E-mail</label>
                              <input type="text" name="email" value="<%= item.email %>" ></div>
                          <div class="field">
                            <label style="color:#800e10;">Address</label>
                            <textarea name="address" value="<%= item.address %>"><%= item.address %></textarea>
                          </div>
                          <h4 class="ui dividing header">Account Info</h4>
                            <div class="required field disabled ">
                              <label style="color:#800e10;">Username</label>
                              <div class="ui icon input">
                                <input type="text" value="<%= item.username %>" name="username">
                                <i class="user icon"></i>
                              </div>
                            </div>
                            <div class="required field">
                              <label style="color:#800e10;">Password</label>
                              <div class="ui icon input">
                                <input type="password" name="password" required>
                                <i class="lock icon"></i>
                              </div>
                            </div>
                          <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-8">
                              <input type="submit" class="btn btn-danger" id="formSubmit" value="Save Changes" >
                              <span></span>
                              <input type="reset" class="btn btn-default" value="Cancel">
                            </div>
                          </div>
                        </form>
                      </div>
                  </div>
                </div>
                <hr>
            </center>
          </div>
        </div>
