<!--==============================================================================================================-->
                                         <!--  Content  -->
<!--===============================================================================================================-->
      <div class="container-fluid">
          <div class="row">
            <div class="col-sm-3 col-md-2 col-lg-2 sidebar">
              <ul class="nav nav-sidebar">
                <li class="active"><a href="#"><%= item.username %> <span class="sr-only">(current)</span></a></li>
                <li><a href="#">Attendance</a></li>
                <li><a href="/bluecard">Academics</a></li>
